<?xml version="1.0" encoding="utf-8"?>


<!--

  这个代表的是单个的功能模块列表
  其中下面几个部分的内容会被修改

  1.ImageButton 的src
  2.TextView    的text


-->


<com.rcs.nchumanity.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.percentlayout.widget.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_select"
        app:layout_aspectRatio="100%"
        app:layout_widthPercent="60%">

        <ImageButton
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_fff"
            android:src="@drawable/ic_shentidong_50"
            app:layout_aspectRatio="100%"
            app:layout_widthPercent="95%" />


    </androidx.percentlayout.widget.PercentFrameLayout>

    <TextView
        android:id="@+id/js"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/zyzjy"
        android:textColor="@color/black" />


</com.rcs.nchumanity.view.PercentLinearLayout>