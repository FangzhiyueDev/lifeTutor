<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rcs.nchumanity.view.CommandBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.rcs.nchumanity.view.CommandBar>


    <Button
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:drawableRight="@drawable/ic_downstep"
        android:drawableTint="#E5E5E5"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="修改密码"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/changePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:drawableRight="@drawable/ic_downstep"
        android:drawableTint="#E5E5E5"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="修改绑定手机"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="留言反馈"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>

    <Button
        android:id="@+id/helpCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="帮助中心"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/cancelSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="取消报名"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/aboutWe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="关于我们"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/softwareUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="软件更新"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


    <Button
        android:id="@+id/backLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smssdk_white"
        android:gravity="left|center_vertical"
        android:paddingLeft="13dp"
        android:text="退出登录"
        android:textColor="#ff0c0c0c"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/ic_22"></View>


</LinearLayout>